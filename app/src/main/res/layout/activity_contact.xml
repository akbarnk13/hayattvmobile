<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".contact">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4254B8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Kontak"
        app:titleTextColor="@color/white" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        app:srcCompat="@drawable/lokasi" />

    <Button
        android:id="@+id/navigasitombol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4254B8"
        android:drawableRight="@drawable/ic_google_maps"
        android:text="         Navigasi" />

    <TextView
        android:id="@+id/textView2"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="#757575"
        />

    <TextView
        android:id="@+id/textView3"
        android:paddingHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jl. H.M. Arsyad No.5-6, Mentawa Baru Hulu, Mentawa Baru/Ketapang, Kabupaten Kotawaringin Timur, Kalimantan Tengah 74312"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/notelp1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="082151472339"
        />
    <TextView
        android:id="@+id/notelp2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="082151472339"
        />
    <LinearLayout
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami"
                android:textColor="#757575"
                />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/telp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:backgroundTint="#4254B8"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:text="Telepon" />

        <Button
            android:id="@+id/wa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4254B8"
            android:drawableLeft="@drawable/ic_icons8_whatsapp"
            android:text="WHATSAPP" />
    </LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#757575"
                />

            <Button
                android:id="@+id/email"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="#4254B8"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:text="EMAIL KAMI" />
</LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/cshayatwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/cshayattelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+6281522522092"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/emailaddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="broadcast.htv@gmail.com"
        android:textSize="0dp"/>
    <TextView
        android:id="@+id/subjectemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        android:text="Hayat TV Mobile" />
    <TextView
        android:id="@+id/emailmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        android:text="Hallo Hayat TV" />

    <TextView
        android:id="@+id/stayc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Stay Connected :" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageyt"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_youtube" />
        <ImageView
            android:id="@+id/imagewebsite"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic__website" />
        <ImageView
            android:id="@+id/imagefacebook"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_facebook" />
        <ImageView
            android:id="@+id/imageig"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_instagram" />

    </LinearLayout>



</LinearLayout>